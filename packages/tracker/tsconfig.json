{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitThis": false,
    "declaration": true
  },
  "include": [
    "src"
  ]
}